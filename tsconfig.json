{
    "compilerOptions": {
      "allowJs": true,
      "allowImportingTsExtensions": true,
      "declaration": true,
      "emitDeclarationOnly": true,
      "checkJs": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "lib": ["ESNext", "DOM"],
      "module": "NodeNext",
      "moduleResolution": "nodenext",
      "noImplicitAny": true,
      "noUncheckedIndexedAccess": true,
      "outDir": "dist",
      "removeComments": true,
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "sourceMap": true,
      "strict": true,
      "strictNullChecks": true,
      "target": "ESNext",
      "types": ["node"]
    },
    "include": ["*", "*/**/*"],
    "exclude": ["node_mitm_proxy", "tmp", "node_modules", "dist"]
}
